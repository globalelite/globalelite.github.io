html(lang='ja')
  head
    meta(charset='UTF-8')
    title グローバルエリート
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
