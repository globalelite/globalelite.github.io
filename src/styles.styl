body
  margin 2em
  font-family serif
  background-color #000
  color #999

h1
  color #fff

h2
  color #ccc

a
  color #ccc
  text-decoration none

  &:hover
    text-decoration underline

footer
  color #666
  font-size 85%

.js
  .wrapper
    display none

.screen
  white-space nowrap
  display inline-block
  position absolute
  top 50%
  left 50%

  .i
    text-decoration underline

  .c
    opacity 1
    animation blink 0.7s infinite

@keyframes blink
  0%
    opacity 1
  50%
    opacity 0
  100%
    opacity 1
